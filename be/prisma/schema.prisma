generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Pengguna {
  id             String          @id @default(uuid())
  nama_lengkap   String
  email          String
  kata_sandi     String
  role           Role
  token          Token[]
  DetailPengguna DetailPengguna? @relation()
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  Peminjaman     Peminjaman[]
}

model Peminjaman {
  id                  String     @id @default(uuid())
  pengguna_id         String
  ruang_rapat_id      String
  nama_kegiatan       String
  tanggal             String
  jam_mulai           String
  jam_selesai         String
  no_surat_peminjaman String
  alasan_penolakan    String?
  status              Status
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
  Pengguna            Pengguna   @relation(fields: [pengguna_id], references: [id])
  RuangRapat          RuangRapat @relation(fields: [ruang_rapat_id], references: [id])
}

enum Status {
  DIPROSES
  DISETUJUI
  DITOLAK
  SELESAI
}

model RuangRapat {
  id             String       @id @default(uuid())
  nama_ruangan   String
  deskripsi      String
  lokasi_ruangan String
  foto_ruangan   String
  kapasitas      String
  peminjaman     Peminjaman[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model DetailPengguna {
  id           String    @id @default(uuid())
  pengguna_id  String    @unique
  kontak       String
  tim_kerja_id String    @unique
  Pengguna     Pengguna  @relation(fields: [pengguna_id], references: [id])
  tim_kerja    TimKerja? @relation(fields: [tim_kerja_id], references: [id])
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model TimKerja {
  id              String          @id @default(uuid())
  nama_tim_kerja  String
  code            String          @unique
  detail_pengguna DetailPengguna? @relation()
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

model Token {
  id          String    @id @default(uuid())
  token       String    @db.Text
  pengguna_id String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  Pengguna    Pengguna? @relation(fields: [pengguna_id], references: [id])
}

enum Role {
  SUPERADMIN
  ADMIN
  PEMINJAM
}
